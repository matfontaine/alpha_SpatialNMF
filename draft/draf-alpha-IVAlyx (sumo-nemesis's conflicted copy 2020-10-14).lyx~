\begin_body

\begin_layout Title
\begin_inset Formula $\alpha-$
\end_inset

IVA
\end_layout

\begin_layout Standard
Let's consider the model:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\boldsymbol{x}_{ft}=\sum_{l}\boldsymbol{a}_{lf}s_{lft}
\]

\end_inset

with:
\begin_inset Formula 
\[
s_{lft}\sim S\alpha S_{c}\left(\lambda_{lft}\right)
\]

\end_inset

Basically, the multiplicative update rules will corresponds to:For 
\begin_inset Formula $\lambda_{lft}$
\end_inset

, we can consider:
\begin_inset Formula 
\[
p\left(\boldsymbol{X}\mid\boldsymbol{A},\boldsymbol{\Lambda}\right)\simeq\prod_{f,t}\int_{\theta^{\prime}\in S_{C}^{M}}\left(c_{1}\frac{\left|\left\langle \boldsymbol{\theta}^{\prime},\mathbf{x}_{ft}\right\rangle \right|^{4}}{I_{ft}\left(\boldsymbol{\theta}^{\prime}\right)^{\left(4+2M\right)/\alpha}}+c_{2}\frac{\left|\left\langle \boldsymbol{\theta}^{\prime},\mathbf{x}_{ft}\right\rangle \right|^{2}}{I_{ft}\left(\boldsymbol{\theta}^{\prime}\right)^{\left(\text{2+2M}\right)/\alpha}}+\frac{c_{3}}{I_{ft}\left(\boldsymbol{\theta}^{\prime}\right)^{2M/\alpha}}\right)e^{-c_{4}\frac{\left|\left\langle \boldsymbol{\theta}^{\prime},\mathbf{x}_{ft}\right\rangle \right|^{2}}{I_{ft}\left(\boldsymbol{\theta}^{\prime}\right)^{2/\alpha}}}d\boldsymbol{\theta}^{\prime}
\]

\end_inset

here we have that:
\begin_inset Formula 
\[
I_{ft}\left(\boldsymbol{\theta}\right)=\sum_{l^{\prime}}\lambda_{l^{\prime}ft}\left|\left\langle \boldsymbol{\theta},\mathbf{a}_{l^{\prime}f}\right\rangle \right|^{\alpha}
\]

\end_inset

and the integral can be approximated by considering 
\begin_inset Formula $\boldsymbol{\theta}^{\prime}=\boldsymbol{a}_{lf}$
\end_inset

 so that:
\begin_inset Formula 
\[
p\left(\boldsymbol{X}\mid\boldsymbol{A},\boldsymbol{\Lambda}\right)\simeq\prod_{f,t}\sum_{l}\left[\tilde{y}_{ftl}\right]
\]

\end_inset

with:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\tilde{y}_{ftl}=\left(c_{1}\frac{\left|\left\langle \boldsymbol{a}_{lf},\mathbf{x}_{ft}\right\rangle \right|^{4}}{I_{ft}\left(\boldsymbol{a}_{lf}\right)^{\left(4+2M\right)/\alpha}}+c_{2}\frac{\left|\left\langle \boldsymbol{a}_{lf},\mathbf{x}_{ft}\right\rangle \right|^{2}}{I_{ft}\left(\boldsymbol{a}_{lf}\right)^{\left(\text{2+2M}\right)/\alpha}}+\frac{c_{3}}{I_{ft}\left(\boldsymbol{a}_{lf}\right)^{2M/\alpha}}\right)e^{-c_{4}\frac{\left|\left\langle \boldsymbol{a}_{lf},\mathbf{x}_{ft}\right\rangle \right|^{2}}{I_{ft}\left(\boldsymbol{a}_{lf}\right)^{2/\alpha}}}
\]

\end_inset

the logarithm of the previous equation yield:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\log p\left(\boldsymbol{X}\mid\boldsymbol{A},\boldsymbol{\Lambda}\right)=\sum_{f,t}\log\left(\sum_{l}\tilde{y}_{ftl}\right)
\]

\end_inset

A first inequality from 
\begin_inset Formula $\log\left(\sum_{k}x_{k}\right)\geq\sum_{k}\lambda_{k}\log\left(\frac{x_{k}}{\lambda_{k}}\right)$
\end_inset

 with 
\begin_inset Formula $\lambda_{k}=x_{k}\left(\sum_{k}x_{k}\right)^{-1}$
\end_inset

 provides:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\log p\left(\boldsymbol{X}\mid\boldsymbol{A},\boldsymbol{\Lambda}\right)\geq\sum_{f,t,l}\omega_{ftl}\log\left(\left(c_{1}\frac{\sum_{m}}{I_{ft}\left(\boldsymbol{a}_{lf}\right)^{\left(4+2M\right)/\alpha}}+c_{2}\frac{\left|\left\langle \boldsymbol{a}_{lf},\mathbf{x}_{ft}\right\rangle \right|^{2}}{I_{ft}\left(\boldsymbol{a}_{lf}\right)^{\left(\text{2+2M}\right)/\alpha}}+\frac{c_{3}}{I_{ft}\left(\boldsymbol{a}_{lf}\right)^{2M/\alpha}}\right)\right)-c_{4}\frac{\left|\left\langle \boldsymbol{a}_{lf},\mathbf{x}_{ft}\right\rangle \right|^{2}}{I_{ft}\left(\boldsymbol{a}_{lf}\right)^{2/\alpha}}-\log\left(\omega_{ftl}\right)
\]

\end_inset

with 
\begin_inset Formula 
\[
\omega_{ftl}=\tilde{y}_{ftl}\left(\sum_{l^{\prime}}\tilde{y}_{ftl^{\prime}}\right)^{-1}
\]

\end_inset

A complete development yields:
\begin_inset Formula 
\[
\mathcal{L}_{+}\left(\boldsymbol{X}\mid\boldsymbol{A},\boldsymbol{\Lambda},\boldsymbol{\Omega}\right)=\sum_{f,t,l}\omega_{ftl}\log\left(\left(c_{1}\frac{\left|\left\langle \boldsymbol{a}_{lf},\mathbf{x}_{ft}\right\rangle \right|^{4}}{I_{ft}\left(\boldsymbol{a}_{lf}\right)^{\left(4+2M\right)/\alpha}}+c_{2}\frac{\left|\left\langle \boldsymbol{a}_{lf},\mathbf{x}_{ft}\right\rangle \right|^{2}}{I_{ft}\left(\boldsymbol{a}_{lf}\right)^{\left(\text{2+2M}\right)/\alpha}}+\frac{c_{3}}{I_{ft}\left(\boldsymbol{a}_{lf}\right)^{2M/\alpha}}\right)\right)-c_{4}\frac{\left|\left\langle \boldsymbol{a}_{lf},\mathbf{x}_{ft}\right\rangle \right|^{2}}{I_{ft}\left(\boldsymbol{a}_{lf}\right)^{2/\alpha}}-\log\left(\omega_{ftl}\right)
\]

\end_inset


\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
A derivative along 
\begin_inset Formula $\boldsymbol{a}_{lf}^{H}$
\end_inset

 gives:
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\[
\frac{\partial\mathcal{L}_{+}}{\partial\boldsymbol{a}_{lf}^{H}}\left(\boldsymbol{X}\mid\boldsymbol{A},\boldsymbol{\Lambda},\boldsymbol{\Omega}\right)=\frac{c_{1}\frac{\tilde{x}_{ftl}{}^{\left(4+2M\right)/\alpha}4\left\langle \boldsymbol{a}_{lf},\mathbf{x}_{ft}\right\rangle ^{\left\langle 3\right\rangle }-\lambda_{lft}\left(4+2M\right)\left\langle \boldsymbol{a}_{lf},\mathbf{x}_{ft}\right\rangle ^{\left\langle \alpha-1\right\rangle }\tilde{x}_{ftl}{}^{\left(4+2M-\alpha\right)/\alpha}\left|\left\langle \boldsymbol{a}_{lf},\mathbf{x}_{ft}\right\rangle \right|^{4}}{\tilde{x}_{ftl}{}^{\left(8+4M\right)/\alpha}}+c_{2}\frac{\tilde{x}_{ftl}{}^{\left(2+2M\right)/\alpha}2\left\langle \boldsymbol{a}_{lf},\mathbf{x}_{ft}\right\rangle -\lambda_{lft}\left(2+2M\right)\left\langle \boldsymbol{a}_{lf},\mathbf{x}_{ft}\right\rangle ^{\left\langle \alpha-1\right\rangle }\tilde{x}_{ftl}{}^{\left(4+2M-\alpha\right)/\alpha}\left|\left\langle \boldsymbol{a}_{lf},\mathbf{x}_{ft}\right\rangle \right|^{2}}{\tilde{x}_{ftl}{}^{\left(4+4M\right)/\alpha}}}{\left(c_{1}\frac{\left|\left\langle \boldsymbol{a}_{lf},\mathbf{x}_{ft}\right\rangle \right|^{4}}{I_{ft}\left(\boldsymbol{a}_{lf}\right)^{\left(4+2M\right)/\alpha}}+c_{2}\frac{\left|\left\langle \boldsymbol{a}_{lf},\mathbf{x}_{ft}\right\rangle \right|^{2}}{I_{ft}\left(\boldsymbol{a}_{lf}\right)^{\left(\text{2+2M}\right)/\alpha}}+\frac{c_{3}}{I_{ft}\left(\boldsymbol{a}_{lf}\right)^{2M/\alpha}}\right)}
\]

\end_inset


\end_layout

\end_inset


\end_layout

